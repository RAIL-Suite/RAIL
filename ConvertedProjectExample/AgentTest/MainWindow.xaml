<Window x:Class="AgentTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AgentTest - Customer Database Demo" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <StackPanel>
                <TextBlock Text="🤖 LLM-Controlled Customer Database" 
                          FontSize="24" FontWeight="Bold" Foreground="White"/>
                <!--<TextBlock Text="All public ViewModel methods are controllable by LLM via EngineLibrary" 
                          FontSize="12" Foreground="#E3F2FD" Margin="0,5,0,0"/>-->
            </StackPanel>
        </Border>

        <!-- Customer DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Customers}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer Info -->
        <Border Grid.Row="2" Background="#ECEFF1" Padding="15">
            <StackPanel>
                <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">
                    💡 Example LLM Commands:
                </TextBlock>
                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#424242">
                    • "Add customer John Smith with email john.smith@test.com"
                </TextBlock>
                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#424242">
                    • "Delete customer with ID 2"
                </TextBlock>
                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#424242">
                    • "Show me details of customer 1"
                </TextBlock>
                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#424242">
                    • "Draw a circle" / "Draw a star" / "Draw a bear"
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
