<Window x:Class="AgentTest.Windows.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Details" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding FullName}" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#1976D2"
                   Margin="0,0,0,20"/>

        <!-- Details -->
        <StackPanel Grid.Row="1">
            <Border Background="White" Padding="15" CornerRadius="5" 
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Customer ID" FontSize="11" Foreground="#757575" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Id}" FontSize="16" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="15" CornerRadius="5" 
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="ðŸ“§ Email" FontSize="11" Foreground="#757575" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Email}" FontSize="16" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="15" CornerRadius="5" 
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="ðŸ“ž Phone" FontSize="11" Foreground="#757575" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Phone}" FontSize="16" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="15" CornerRadius="5" 
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="ðŸ  Address" FontSize="11" Foreground="#757575" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Address}" FontSize="16" Margin="0,3,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="15" CornerRadius="5" 
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="ðŸ“… Created Date" FontSize="11" Foreground="#757575" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CreatedDate, StringFormat='{}{0:dd MMMM yyyy - HH:mm}'}" 
                               FontSize="16" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Click="CloseButton_Click"
                Padding="20,10"
                FontSize="14"
                Background="#2196F3"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,20,0,0"/>
    </Grid>

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="10" 
                          ShadowDepth="2" 
                          Opacity="0.2" 
                          Color="#000000"/>
    </Window.Resources>
</Window>
