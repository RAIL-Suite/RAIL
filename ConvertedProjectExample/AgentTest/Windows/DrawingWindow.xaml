<Window x:Class="AgentTest.Windows.DrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ¨ AI Drawing Canvas" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#263238">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#37474F" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸŽ¨ AI Drawing Canvas" 
                          FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="StatusText" 
                          Text="Waiting for commands..." 
                          FontSize="12" Foreground="#B0BEC5" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Drawing Area -->
        <Border Grid.Row="1" Background="White" Margin="20">
            <InkCanvas x:Name="DrawingCanvas" 
                       Background="White"
                       EditingMode="None"/>
        </Border>
    </Grid>
</Window>
