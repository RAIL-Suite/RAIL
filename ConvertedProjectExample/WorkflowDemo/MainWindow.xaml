<Window x:Class="WorkflowDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:WorkflowDemo.ViewModels"
        Title="🏭 Workflow Demo - Production Management System" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="PrimaryDark" Padding="16" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="🔄 Refresh" Command="{Binding RefreshAllCommand}" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="White" Margin="0,0,8,0"/>
                    <Button Content="♻️ Reset Demo" Command="{Binding ResetDemoCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="Orange"/>
                </StackPanel>
                <TextBlock Text="🏭 MANUFACTURING COMPANY SIMULATION" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Tab Control -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignFilledTabControl}" 
                    SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- Dashboard Tab -->
            <TabItem Header="📊 Dashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel DataContext="{Binding Dashboard}">
                        <TextBlock Text="Dashboard Overview" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,16"/>
                        
                        <UniformGrid Columns="4" Margin="0,0,0,16">
                            <!-- Machines Card -->
                            <materialDesign:Card Margin="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="MACHINES" FontWeight="Bold" Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="🟢" FontSize="16"/>
                                        <TextBlock Text="{Binding MachinesFree, StringFormat='{}{0} Free'}" Margin="4,0,16,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🟡" FontSize="16"/>
                                        <TextBlock Text="{Binding MachinesBusy, StringFormat='{}{0} Busy'}" Margin="4,0,16,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔴" FontSize="16"/>
                                        <TextBlock Text="{Binding MachinesError, StringFormat='{}{0} Error'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Orders Card -->
                            <materialDesign:Card Margin="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="ORDERS" FontWeight="Bold" Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="⏳" FontSize="16"/>
                                        <TextBlock Text="{Binding OrdersPending, StringFormat='{}{0} Pending'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" FontSize="16"/>
                                        <TextBlock Text="{Binding OrdersInProgress, StringFormat='{}{0} In Progress'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅" FontSize="16"/>
                                        <TextBlock Text="{Binding OrdersCompleted, StringFormat='{}{0} Completed'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Inventory Card -->
                            <materialDesign:Card Margin="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="INVENTORY" FontWeight="Bold" Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="✅" FontSize="16"/>
                                        <TextBlock Text="{Binding InventoryOk, StringFormat='{}{0} OK'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚠️" FontSize="16"/>
                                        <TextBlock Text="{Binding InventoryLow, StringFormat='{}{0} Low'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔴" FontSize="16"/>
                                        <TextBlock Text="{Binding InventoryCritical, StringFormat='{}{0} Critical'}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Alerts Card -->
                            <materialDesign:Card Margin="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="ALERTS" FontWeight="Bold" Foreground="Orange"/>
                                    <ItemsControl ItemsSource="{Binding Alerts}" Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </materialDesign:Card>
                        </UniformGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Machines Tab -->
            <TabItem Header="🔧 Machines">
                <Grid Margin="16" DataContext="{Binding Machines}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Machine Status" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,16"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Machines}" 
                             SelectedItem="{Binding SelectedMachine}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" Margin="4" BorderThickness="3" BorderBrush="Transparent" CornerRadius="8">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#FFCC00"/>
                                                    <Setter TargetName="Border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#FFCC00" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Padding="16" Cursor="Hand"
                                                     Background="{Binding Status, Converter={StaticResource MachineStatusToColorConverter}}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Id}" Foreground="Gray" HorizontalAlignment="Center"/>
                                        <Border Width="60" Height="60" CornerRadius="30" Margin="16"
                                                Background="{Binding Status, Converter={StaticResource MachineStatusToBrushConverter}}">
                                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                        <TextBlock Text="{Binding BusyUntil, StringFormat='Until: {0:HH:mm}'}" 
                                                   HorizontalAlignment="Center" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="🟢 Free" Command="{Binding SetFreeCommand}" Margin="8" 
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Content="🟡 Busy" Command="{Binding SetBusyCommand}" Margin="8"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Content="🔴 Error" Command="{Binding SetErrorCommand}" Margin="8"
                                Style="{StaticResource MaterialDesignRaisedButton}" Background="DarkRed"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Inventory Tab -->
            <TabItem Header="📦 Inventory">
                <Grid Margin="16" DataContext="{Binding Inventory}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Inventory Management" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBox Width="200" materialDesign:HintAssist.Hint="🔍 Search..." 
                                 Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,16,0"/>
                        <CheckBox Content="Critical only" IsChecked="{Binding ShowOnlyCritical}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding Components}" SelectedItem="{Binding SelectedComponent}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              RowStyle="{StaticResource HighlightedRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding QtyInStock}" Width="80"/>
                            <DataGridTextColumn Header="Min" Binding="{Binding QtyMinimum}" Width="60"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding UnitCost, StringFormat='€{0:N2}'}" Width="80"/>
                            <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier}" Width="120"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StockStatus}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="➕ Add +50" Command="{Binding AddStockCommand}" Margin="0,0,8,0"/>
                        <Button Content="➖ Remove -10" Command="{Binding RemoveStockCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Products Tab -->
            <TabItem Header="� Products">
                <Grid Margin="16" DataContext="{Binding Products}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Products" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,8"/>
                        <ListBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}"
                                 DisplayMemberPath="Code" Height="400"
                                 ItemContainerStyle="{StaticResource HighlightedListBoxItem}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="16,0,0,0">
                        <TextBlock Text="Bill of Materials (BOM)" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,8"/>
                        
                        <DataGrid ItemsSource="{Binding BomItems}" AutoGenerateColumns="False" IsReadOnly="True" 
                                  CanUserAddRows="False" Height="350">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Component" Binding="{Binding ComponentCode}" Width="120"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Component.Name}" Width="*"/>
                                <DataGridTextColumn Header="Qty" Binding="{Binding QtyRequired}" Width="60"/>
                                <DataGridTextColumn Header="Unit Cost" Binding="{Binding Component.UnitCost, StringFormat='€{0:N2}'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <materialDesign:Card Margin="0,16,0,0" Padding="16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total BOM Cost: " FontSize="18"/>
                                <TextBlock Text="{Binding TotalBomCost, StringFormat='€{0:N2}'}" FontSize="18" FontWeight="Bold" 
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Orders Tab -->
            <TabItem Header="📋 Orders">
                <Grid Margin="16" DataContext="{Binding Orders}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Order Management" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,16"/>

                    <!-- New Order Form -->
                    <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="150" materialDesign:HintAssist.Hint="Customer" 
                                     Text="{Binding NewCustomer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                            <TextBox Width="120" materialDesign:HintAssist.Hint="Product Code" 
                                     Text="{Binding NewProductCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                            <TextBox Width="80" materialDesign:HintAssist.Hint="Quantity" 
                                     Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                            <Button Content="➕ Create Order" Command="{Binding CreateOrderCommand}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              RowStyle="{StaticResource HighlightedRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="150"/>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductCode}" Width="120"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Machine" Binding="{Binding AssignedMachineId}" Width="100"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat='{}{0:dd/MM HH:mm}'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="▶️ Auto Schedule" Command="{Binding ScheduleAutoCommand}" Margin="0,0,8,0"/>
                        <Button Content="✅ Complete" Command="{Binding CompleteOrderCommand}" Margin="0,0,8,0"/>
                        <Button Content="❌ Cancel" Command="{Binding CancelOrderCommand}" Background="DarkRed"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <materialDesign:ColorZone Mode="PrimaryDark" Grid.Row="2" Padding="8">
            <TextBlock Text="{Binding StatusMessage}"/>
        </materialDesign:ColorZone>
    </Grid>
</Window>
