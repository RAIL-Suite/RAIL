<Window x:Class="WpfRagApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRagApp"
        xmlns:vm="clr-namespace:WpfRagApp.ViewModels"
        mc:Ignorable="d"
        Title="" Height="600" Width="900"
        Background="#1E1E1E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="ORCHESTRATOR" FontSize="20" FontWeight="Bold" Foreground="White" Margin="20"/>
                
                <Button Command="{Binding NavigateHomeCommand}" Margin="15,0" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Home" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="ApiConfigButton" Click="ApiConfigButton_Click" Margin="15,10" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔌" Foreground="White" Margin="-1,0,10,0"/>
                        <TextBlock Text="API" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding NavigateSettingsCommand}" Margin="15,0" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Settings" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>

