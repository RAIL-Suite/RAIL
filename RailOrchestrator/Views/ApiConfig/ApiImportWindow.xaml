<Window x:Class="WpfRagApp.Views.ApiConfig.ApiImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import API" 
        Width="500" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0090E0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ”Œ Import API" FontSize="22" FontWeight="SemiBold" 
                   Foreground="White" Margin="0,0,0,8"/>
        <TextBlock Grid.Row="1" Text="Import an OpenAPI/Swagger specification to add API skills" 
                   Foreground="#888" FontSize="13" Margin="0,0,0,20"/>
        
        <!-- URL Input -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="OpenAPI/Swagger URL" Foreground="White" FontSize="12" Margin="0,0,0,6"/>
            <TextBox x:Name="UrlInput" 
                     Background="#2D2D2D" Foreground="White" 
                     BorderBrush="#444" BorderThickness="1"
                     Padding="10,8" FontSize="13"
                     Text="https://"/>
        </StackPanel>
        
        <!-- Provider ID -->
        <StackPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="Provider ID (e.g., gmail, hubspot)" Foreground="White" FontSize="12" Margin="0,0,0,6"/>
            <TextBox x:Name="ProviderIdInput" 
                     Background="#2D2D2D" Foreground="White" 
                     BorderBrush="#444" BorderThickness="1"
                     Padding="10,8" FontSize="13"/>
        </StackPanel>
        
        <!-- Progress -->
        <Border Grid.Row="4" x:Name="ProgressPanel" Visibility="Collapsed" 
                Background="#252525" CornerRadius="8" Padding="16" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock x:Name="ProgressLabel" Text="Importing..." Foreground="White" 
                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ProgressBar x:Name="ProgressBar" Height="6" Background="#333" 
                             Foreground="#007ACC" Minimum="0" Maximum="100"/>
                <TextBlock x:Name="ProgressDetail" Text="" Foreground="#888" 
                           FontSize="11" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Result -->
        <Border Grid.Row="4" x:Name="ResultPanel" Visibility="Collapsed" 
                Background="#252525" CornerRadius="8" Padding="16" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock x:Name="ResultIcon" Text="âœ…" FontSize="32" 
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock x:Name="ResultMessage" Text="" Foreground="White" 
                           FontWeight="SemiBold" TextAlignment="Center"/>
                <TextBlock x:Name="ResultDetail" Text="" Foreground="#888" 
                           FontSize="12" TextAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButton}" 
                    Background="#333" Click="CancelButton_Click"/>
            <Button x:Name="ImportButton" Content="ðŸš€ Import" Style="{StaticResource ModernButton}" 
                    Margin="8,0,0,0" Click="ImportButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

