<Window x:Class="WpfRagApp.Views.DataPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Preview" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D30"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="ðŸ“¥ Import Preview" FontSize="20" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="FileInfoText" Foreground="#888888" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Target Method -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="4" Padding="12" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Target Method: " Foreground="#888888"/>
                <TextBlock x:Name="TargetMethodText" Foreground="#4EC9B0" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <!-- Mapping Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Column Mapping" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
            
            <DataGrid Grid.Row="1" 
                      x:Name="MappingGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Source Column" Binding="{Binding SourceColumn}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Target Parameter" Binding="{Binding TargetParameter}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Confidence" Binding="{Binding ConfidencePercent}" Width="80" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Warnings -->
        <Border Grid.Row="3" x:Name="WarningsPanel" Background="#3A2A1A" CornerRadius="4" Padding="12" Margin="0,16,0,0" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="âš ï¸ Warnings" Foreground="#FFA500" FontWeight="Bold"/>
                <ItemsControl x:Name="WarningsList" Margin="0,8,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        
        <!-- Actions -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Rate Limit:" Foreground="#888888" VerticalAlignment="Center"/>
                <TextBox x:Name="RateLimitBox" Text="10" Width="40" Margin="8,0" 
                         Background="#3C3C3C" Foreground="White" BorderThickness="0" Padding="4"/>
                <TextBlock Text="calls/sec" Foreground="#888888" VerticalAlignment="Center"/>
            </StackPanel>
            
            <Button Grid.Column="2" Content="Cancel" Style="{StaticResource CancelButton}" 
                    Margin="0,0,8,0" Click="CancelButton_Click"/>
            <Button Grid.Column="3" x:Name="ApplyButton" Style="{StaticResource ActionButton}" 
                    Click="ApplyButton_Click"/>
        </Grid>
    </Grid>
</Window>

