<UserControl x:Class="WpfRagApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             ClipToBounds="False">

    <UserControl.Resources>
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                    Grid.ColumnSpan="2"
                    CornerRadius="2"
                    Background="#FF212121"
                    BorderBrush="#FF444444"
                    BorderThickness="1" />

                <Path x:Name="Arrow" 
                  Grid.Column="1" 
                  Fill="White"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z" />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="DarkComboBoxTemplate" TargetType="ComboBox">
            <Grid>
                <ToggleButton Name="ToggleButton" 
                          Template="{StaticResource ComboBoxToggleButton}" 
                          Grid.Column="2" 
                          Focusable="false"
                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                          ClickMode="Press">
                </ToggleButton>

                <ContentPresenter Name="ContentSite"
                              IsHitTestVisible="False" 
                              Content="{TemplateBinding SelectionBoxItem}"
                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                              Margin="6,3,23,3"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left" />

                <Popup Name="Popup"
                   Placement="Bottom"
                   IsOpen="{TemplateBinding IsDropDownOpen}"
                   AllowsTransparency="True" 
                   Focusable="False"
                   PopupAnimation="Slide">
                    <Grid Name="DropDown"
                      SnapsToDevicePixels="True"
                      MinWidth="{TemplateBinding ActualWidth}"
                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <Border x:Name="DropDownBorder"
                            Background="#FF212121"
                            BorderThickness="1"
                            BorderBrush="#FF444444"/>
                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Grid>
                </Popup>
            </Grid>
        </ControlTemplate>

        <!-- Modern iOS-style Toggle Switch -->
        <Style x:Key="ModernToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Toggle Track -->
                            <Border x:Name="ToggleTrack"
                                    Grid.Column="0"
                                    Width="36" Height="20"
                                    CornerRadius="10"
                                    Background="#3F3F46"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                
                                <!-- Toggle Knob -->
                                <Border x:Name="ToggleKnob"
                                        Width="14" Height="14"
                                        CornerRadius="7"
                                        Background="White"
                                        HorizontalAlignment="Left"
                                        Margin="3,0,0,0"
                                        VerticalAlignment="Center">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3" Direction="270"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                            
                            <!-- Label -->
                            <ContentPresenter Grid.Column="1" 
                                              Margin="8,0,0,0"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- Checked State - Move knob to right -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleTrack" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="ToggleKnob" Property="Margin" Value="19,0,0,0"/>
                            </Trigger>
                            
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleTrack" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            
                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ToggleTrack" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="ToggleKnob" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Boolean to Visibility Converter for Asset Panel -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Background="#1E1E1E" ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="30,20" BorderBrush="#333333" BorderThickness="0,0,0,1" HorizontalAlignment="Center" Visibility="Collapsed">
            <TextBlock Text="ORCHESTRATOR" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
        </Border>

        <!-- Answer Area (Middle, takes available space) -->
        <Border Grid.Row="1" Margin="30,20,30,0" Background="#252526" CornerRadius="4" BorderBrush="#3F3F46" BorderThickness="1">
            <ScrollViewer Padding="20">
                <TextBox Text="{Binding Answer}" 
                 IsReadOnly="True" 
                 TextWrapping="Wrap" 
                 FontSize="15" 
                 Foreground="#D4D4D4"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="0" />
            </ScrollViewer>
        </Border>

        <!-- Controls (Bottom) -->
        <StackPanel Grid.Row="2" Margin="30,20,30,30" ClipToBounds="False">
            <!-- Question Input -->
            <TextBlock Text="Your Question" Foreground="#CCCCCC" Margin="0,0,0,8"/>
            <TextBox x:Name="QuestionTextBox"
                     Text="{Binding Question, UpdateSourceTrigger=PropertyChanged}" 
                     Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     Padding="10" VerticalContentAlignment="Top"
                     Margin="0,0,0,20"
                     Background="#FF212121" BorderBrush="#3F3F46" Foreground="#E1E1E1"
                     AllowDrop="True"
                     PreviewDragOver="QuestionTextBox_PreviewDragOver"
                     Drop="QuestionTextBox_Drop"
                     KeyDown="QuestionTextBox_KeyDown"/>
            
            <!-- Temperature Slider + Chat Only + ReAct + Model Selection + Ask Button (Same Row) -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Temperature Slider -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0" VerticalAlignment="Center">
                    <TextBlock Text="Temp:" Foreground="#E1E1E1" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="13"/>
                    <Slider Width="120" 
                            Minimum="0" 
                            Maximum="2.0" 
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            Value="{Binding Temperature, Mode=TwoWay}"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Temperature, StringFormat={}{0:F1}}" 
                               Foreground="#E1E1E1" 
                               Width="30" 
                               VerticalAlignment="Center" 
                               Margin="8,0,0,0"
                               FontSize="13"/>
                </StackPanel>
                
                <!-- Chat Only Toggle (Modern) -->
                <CheckBox Grid.Column="2" 
                          Style="{StaticResource ModernToggleSwitch}"
                          IsChecked="{Binding ChatOnlyMode, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          ToolTip="Disable asset tools and chat directly with LLM">
                    <TextBlock Text="Chat Only" Foreground="#E1E1E1" FontSize="13" FontWeight="SemiBold"/>
                </CheckBox>
                
                <!-- ReAct Mode Toggle (Modern) -->
                <CheckBox Grid.Column="3" 
                          Style="{StaticResource ModernToggleSwitch}"
                          IsChecked="{Binding ReActEnabled, Mode=TwoWay}"
                          IsEnabled="{Binding IsReActAvailable}"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          ToolTip="Enable ReAct (Reasoning + Acting) mode for explicit reasoning chains">
                    <TextBlock Text="ReAct" Foreground="#E1E1E1" FontSize="13" FontWeight="SemiBold"/>
                </CheckBox>
                
                <ComboBox Grid.Column="4"
                          Template="{StaticResource DarkComboBoxTemplate}"
                          ItemsSource="{Binding AvailableModels}" 
                          SelectedItem="{Binding SelectedModel}"
                          DisplayMemberPath="Name"
                          Height="40" 
                          Width="200"
                          Margin="0,0,10,0"
                          Background="#FF212121" BorderBrush="#3F3F46" Foreground="#E1E1E1"/>
                
                <!-- Mic Button with Blinking Animation -->
                <Button x:Name="MicButton"
                        Grid.Column="5"
                        Click="MicButton_Click"
                        Width="50" 
                        Height="40"
                        Margin="0,0,5,0"
                        Background="#007ACC" 
                        Foreground="White" 
                        BorderThickness="0"
                        ToolTip="Click to start/stop recording">
                    <Button.Resources>
                        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           From="1.0" To="0.4" Duration="0:0:0.5"
                                           AutoReverse="True"/>
                        </Storyboard>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse x:Name="RecordingDot" Width="8" Height="8" 
                                 Fill="#FF4444" Margin="0,0,4,0" 
                                 Visibility="Collapsed"/>
                        <TextBlock x:Name="MicIcon" Text="ðŸŽ™ï¸" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Speaker Button (Left=Play/Replay, Right=Mute Toggle) -->
                <Button x:Name="SpeakerButton"
                        Grid.Column="6"
                        Click="SpeakerButton_Click"
                        MouseRightButtonDown="SpeakerButton_RightClick"
                        Width="40" 
                        Height="40"
                        Background="#333333" 
                        Foreground="White" 
                        BorderThickness="0"
                        ToolTip="Left: Play/Replay | Right: Mute">
                    <TextBlock x:Name="SpeakerIcon" Text="ðŸ”Š" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- Asset Chip Selector Panel (Disabled when Chat Only) -->
            <Border Background="#1A1A1A" 
                    BorderThickness="1"
                    CornerRadius="8"
                    ClipToBounds="False"
                    IsEnabled="{Binding IsAssetPanelEnabled}"
                    Opacity="{Binding AssetPanelOpacity}">
                <Grid ClipToBounds="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border HorizontalAlignment="Center">
                        <TextBlock Text="ASSET" 
                               Foreground="#007ACC"
                               FontSize="15"
                               FontWeight="Bold"
                               Margin="12,8"
                               Opacity="0.9"/>
                    </Border>
                    
                    <!-- Chip Slider -->
                    <Grid Grid.Row="1" Margin="8,0,8,8" ClipToBounds="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Arrow -->
                        <Button x:Name="ScrollLeftBtn"
                                Content="â—€"
                                Click="ScrollLeft_Click"
                                Background="#252526"
                                BorderBrush="#3F3F46"
                                Foreground="#CCCCCC"
                                BorderThickness="1"
                                FontSize="14"
                                Cursor="Hand"
                                VerticalAlignment="Center"
                                Height="70">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#007ACC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!--CHIPS-->
                        <ScrollViewer x:Name="ChipScrollViewer"
                                      Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Disabled"
                                      CanContentScroll="False"
                                      PanningMode="HorizontalOnly"
                                      PreviewMouseWheel="ChipScrollViewer_PreviewMouseWheel"
                                      ClipToBounds="False" Visibility="Visible">
                            <ItemsControl ItemsSource="{Binding AvailableAssets}" ClipToBounds="False">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" ClipToBounds="False"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Asset Chip -->
                                        <Border x:Name="ChipBorder"
                                                Tag="{Binding}"
                                                Width="90"
                                                Height="110"
                                                Margin="6,0"
                                                CornerRadius="8"
                                                BorderThickness="2"
                                                BorderBrush="{Binding ChipBorderColor}"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="AssetChip_Click"
                                                MouseRightButtonDown="AssetChip_RightClick">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#2A2A2A" Offset="0"/>
                                                    <GradientStop Color="#1A1A1A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>

                                            <Border.RenderTransform>
                                                <ScaleTransform/>
                                            </Border.RenderTransform>
                                            <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>

                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <!-- Icon for type -->
                                                <TextBlock Text="{Binding Icon}" 
                                                           FontSize="18"
                                                           TextAlignment="Center"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="#E1E1E1"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           TextAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="80"
                                                           Margin="4,0"/>
                                                <TextBlock Text="{Binding Subtitle}" 
                                                           Foreground="#888888"
                                                           FontSize="9"
                                                           TextAlignment="Center"
                                                           Margin="4,4,4,0"/>
                                            </StackPanel>

                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <!-- Hover Effect -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Panel.ZIndex" Value="200"/>
                                                            <Setter Property="BorderBrush" Value="#00D9FF"/>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#00D9FF" 
                                                                                      BlurRadius="20"
                                                                                      ShadowDepth="0"
                                                                                      Opacity="0.7"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.5" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.5" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.0" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.0" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>

                                                        <!-- Selected State -->
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#00D9FF"/>
                                                            <Setter Property="BorderThickness" Value="3"/>
                                                            <Setter Property="LayoutTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Panel.ZIndex" Value="999"/>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#00D9FF" 
                                                                                      BlurRadius="15"
                                                                                      ShadowDepth="0"
                                                                                      Opacity="0.8"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Right Arrow -->
                        <Button x:Name="ScrollRightBtn"
                                Grid.Column="2"
                                Content="â–¶"
                                Click="ScrollRight_Click"
                                Background="#252526"
                                BorderBrush="#3F3F46"
                                Foreground="#CCCCCC"
                                BorderThickness="1"
                                FontSize="14"
                                Cursor="Hand"
                                VerticalAlignment="Center"
                                Height="70">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#007ACC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>

