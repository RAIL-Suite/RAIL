<Window x:Class="WpfRagApp.Views.MiniPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfRagApp Mini"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Width="500" Height="80"
        MinWidth="250" MinHeight="70"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <!-- Send Button Style -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Expand Button Style -->
        <Style x:Key="ExpandButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="#00D9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container with Shadow -->
    <Grid>
        <!-- Resize Grips for all 4 corners -->
        <Thumb x:Name="ResizeGripTL" 
               Width="16" Height="16" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Cursor="SizeNWSE"
               Opacity="0"
               DragDelta="ResizeGripTL_DragDelta"/>
        
        <Thumb x:Name="ResizeGripTR" 
               Width="16" Height="16" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Cursor="SizeNESW"
               Opacity="0"
               DragDelta="ResizeGripTR_DragDelta"/>
        
        <Thumb x:Name="ResizeGripBL" 
               Width="16" Height="16" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Bottom" 
               Cursor="SizeNESW"
               Opacity="0"
               DragDelta="ResizeGripBL_DragDelta"/>
        
        <Thumb x:Name="ResizeGripBR" 
               Width="16" Height="16" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom" 
               Cursor="SizeNWSE"
               Opacity="0"
               DragDelta="ResizeGripBR_DragDelta"/>
        
        <Border CornerRadius="28" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="2" Opacity="0.6"/>
        </Border.Effect>
        
        <!-- Pill Shape -->
        <Border x:Name="MainBorder"
                Background="#1E1E1E" 
                BorderBrush="#3F3F46" 
                BorderThickness="1"
                CornerRadius="25"
                MouseDown="Border_MouseDown"
                AllowDrop="True"
                PreviewDragOver="MainBorder_PreviewDragOver"
                Drop="MainBorder_Drop">
            
            <Grid Margin="8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>      <!-- Logo -->
                    <ColumnDefinition Width="Auto"/>      <!-- Asset Selector -->
                    <ColumnDefinition Width="1"/>         <!-- Divider -->
                    <ColumnDefinition Width="*"/>         <!-- Input -->
                    <ColumnDefinition Width="Auto"/>      <!-- Mic -->
                    <ColumnDefinition Width="Auto"/>      <!-- Speaker -->
                    <ColumnDefinition Width="Auto"/>      <!-- Response -->
                    <ColumnDefinition Width="Auto"/>      <!-- Expand -->
                </Grid.ColumnDefinitions>
                
                <!-- Logo/Icon -->
                <TextBlock Grid.Column="0" 
                           Text="âš¡" 
                           FontSize="18" 
                           Foreground="#007ACC"
                           VerticalAlignment="Center"
                           Margin="8,0,4,0"/>
                
                <!-- Asset Selector Button with Popup -->
                <ToggleButton x:Name="AssetPopupToggle"
                              Grid.Column="1"
                              Width="28" Height="28"
                              Background="Transparent"
                              BorderThickness="0"
                              Cursor="Hand"
                              ToolTip="Select Asset"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="14"
                                    Padding="4">
                                <TextBlock Text="ðŸ“¦" FontSize="14" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                
                <!-- Asset Popup -->
                <Popup x:Name="AssetPopup"
                       PlacementTarget="{Binding ElementName=AssetPopupToggle}"
                       Placement="Top"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Opened="AssetPopup_Opened"
                       IsOpen="{Binding IsChecked, ElementName=AssetPopupToggle, Mode=TwoWay}">
                    <Border x:Name="AssetBorder"
                            Background="#252526" 
                            BorderBrush="#3F3F46" 
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="8"
                            Margin="8">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.5"/>
                        </Border.Effect>
                        
                        <Grid MaxWidth="600" MinWidth="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Draggable Header -->
                            <Border Grid.Row="0" 
                                    Background="Transparent" 
                                    Cursor="Hand"
                                    MouseDown="AssetHeader_MouseDown">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <TextBlock Text="ASSET" 
                                               Foreground="#007ACC" 
                                               FontSize="11" 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="" 
                                               Foreground="#666666" 
                                               FontSize="9" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Scrollable Chips -->
                            <ScrollViewer x:Name="PopupChipScrollViewer"
                                          Grid.Row="1"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled"
                                          PreviewMouseWheel="PopupScrollViewer_PreviewMouseWheel"
                                          MaxHeight="110">
                                <ItemsControl ItemsSource="{Binding AvailableAssets}" ClipToBounds="False">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" ClipToBounds="False"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Enhanced Asset Chip -->
                                            <Border x:Name="PopupChip"
                                                    Tag="{Binding}"
                                                    Width="80" Height="90"
                                                    Margin="5"
                                                    CornerRadius="8"
                                                    BorderThickness="1"
                                                    Cursor="Hand"
                                                    MouseLeftButtonUp="PopupChip_Click"
                                                    ToolTipService.InitialShowDelay="300">
                                                
                                                <!-- Tooltip with details -->
                                                <Border.ToolTip>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                                        <TextBlock Text="{Binding Subtitle}" Foreground="#888888" FontSize="11"/>
                                                        <TextBlock Text="{Binding Path}" Foreground="#666666" FontSize="9" TextWrapping="Wrap" MaxWidth="200"/>
                                                    </StackPanel>
                                                </Border.ToolTip>
                                                
                                                <!-- Gradient Background -->
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#2A2A2A" Offset="0"/>
                                                        <GradientStop Color="#1A1A1A" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                
                                                <!-- Scale Transform for animations -->
                                                <Border.RenderTransform>
                                                    <ScaleTransform/>
                                                </Border.RenderTransform>
                                                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                                                
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="#444444"/>
                                                        <Style.Triggers>
                                                            <!-- Hover Effect with Animation -->
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#00D9FF"/>
                                                                <Setter Property="Panel.ZIndex" Value="100"/>
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect Color="#00D9FF" 
                                                                                          BlurRadius="15"
                                                                                          ShadowDepth="0"
                                                                                          Opacity="0.7"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                             To="1.15" Duration="0:0:0.12"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                             To="1.15" Duration="0:0:0.12"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                             To="1.0" Duration="0:0:0.12"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                             To="1.0" Duration="0:0:0.12"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                            
                                                            <!-- Selected State with Glow -->
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="BorderBrush" Value="#00D9FF"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                                <Setter Property="Panel.ZIndex" Value="999"/>
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect Color="#00D9FF" 
                                                                                          BlurRadius="12"
                                                                                          ShadowDepth="0"
                                                                                          Opacity="0.7"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="ðŸ“¦" FontSize="22" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                               Foreground="#E1E1E1" 
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="70"
                                                               TextAlignment="Center"
                                                               Margin="0,4,0,0"/>
                                                    <TextBlock Text="{Binding Subtitle}" 
                                                               Foreground="#888888" 
                                                               FontSize="8"
                                                               TextAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Popup>
                
                <!-- Divider -->
                <Border Grid.Column="2" 
                        Width="1" 
                        Background="#3F3F46" 
                        Margin="0,8"/>
                
                <!-- Prompt Input -->
                <TextBox x:Name="PromptInput"
                         Grid.Column="3"
                         Text="{Binding Question, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#E1E1E1"
                         FontSize="14"
                         VerticalAlignment="Center"
                         Margin="12,0"
                         CaretBrush="#00D9FF"
                         KeyDown="PromptInput_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush AlignmentX="Left" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Scrivi qui il tuo prompt..." 
                                                               Foreground="#666666" 
                                                               FontSize="14"
                                                               Margin="4,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Mic Button (EXACT HomeView Style) -->
                <Button x:Name="MicButton"
                        Grid.Column="4"
                        Click="MicButton_Click"
                        Width="40" 
                        Height="28"
                        Margin="4,0"
                        Background="#007ACC" 
                        Foreground="White" 
                        BorderThickness="0"
                        ToolTip="Click to start/stop recording">
                    <Button.Resources>
                        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           From="1.0" To="0.4" Duration="0:0:0.5"
                                           AutoReverse="True"/>
                        </Storyboard>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse x:Name="RecordingDot" Width="6" Height="6" 
                                 Fill="#FF4444" Margin="0,0,3,0" 
                                 Visibility="Collapsed"/>
                        <TextBlock x:Name="MicIcon" Text="ðŸŽ™ï¸" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Speaker Button (EXACT HomeView Style) -->
                <Button x:Name="SpeakerButton"
                        Grid.Column="5"
                        Click="SpeakerButton_Click"
                        MouseRightButtonDown="SpeakerButton_RightClick"
                        Width="32" 
                        Height="28"
                        Margin="0,0,4,0"
                        Background="#333333" 
                        Foreground="White" 
                        BorderThickness="0"
                        ToolTip="Left: Play/Replay | Right: Mute">
                    <TextBlock x:Name="SpeakerIcon" Text="ðŸ”Š" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Response Button with Popup -->
                <ToggleButton x:Name="ResponsePopupToggle"
                              Grid.Column="6"
                              Width="28" Height="28"
                              Background="Transparent"
                              BorderThickness="0"
                              Cursor="Hand"
                              ToolTip="Show/Hide flow"
                              VerticalAlignment="Center"
                              Margin="2,0">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="14"
                                    Padding="4">
                                <TextBlock Text="ðŸ’¬" FontSize="14" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                
                <!-- Response Popup -->
                <Popup x:Name="ResponsePopup"
                       PlacementTarget="{Binding ElementName=ResponsePopupToggle}"
                       Placement="Top"
                       StaysOpen="True"
                       MinHeight="100"
                       MinWidth="300"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       IsOpen="{Binding IsChecked, ElementName=ResponsePopupToggle, Mode=TwoWay}">
                    <Border x:Name="ResponseBorder"
                            Background="#252526" 
                            BorderBrush="#3F3F46" 
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12"
                            Margin="8"
                            MaxWidth="700"
                            MaxHeight="600"
                            MouseDown="ResponseHeader_MouseDown"
                            MouseMove="ResponseHeader_MouseMove"
                            MouseUp="ResponseHeader_MouseUp">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.5"/>
                        </Border.Effect>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Draggable Header -->
                            <Border Grid.Row="0" 
                                    Background="Transparent" 
                                    Cursor="Hand"
                                    MouseDown="ResponseHeader_MouseDown">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ’¬" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Agentic Flow" 
                                                   Foreground="#007ACC" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="" 
                                                   Foreground="#666666" 
                                                   FontSize="9" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Opacity Slider -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ‘" FontSize="10" Foreground="#888888" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <Slider x:Name="ResponseOpacitySlider"
                                                Width="50"
                                                Height="16"
                                                Minimum="0.3"
                                                Maximum="1.0"
                                                Value="0.95"
                                                VerticalAlignment="Center"
                                                ToolTip="OpacitÃ  popup"
                                                ValueChanged="ResponseOpacitySlider_ValueChanged">
                                            <Slider.Style>
                                                <Style TargetType="Slider">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Slider">
                                                                <Grid>
                                                                    <Border Height="3" 
                                                                            CornerRadius="1.5" 
                                                                            Background="#333333"
                                                                            VerticalAlignment="Center"/>
                                                                    <Track x:Name="PART_Track">
                                                                        <Track.Thumb>
                                                                            <Thumb Width="10" Height="10" Cursor="Hand">
                                                                                <Thumb.Template>
                                                                                    <ControlTemplate TargetType="Thumb">
                                                                                        <Ellipse Fill="#00D9FF" 
                                                                                                 Width="10" Height="10"
                                                                                                 Stroke="#007ACC"
                                                                                                 StrokeThickness="1"/>
                                                                                    </ControlTemplate>
                                                                                </Thumb.Template>
                                                                            </Thumb>
                                                                        </Track.Thumb>
                                                                    </Track>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Slider.Style>
                                        </Slider>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Divider -->
                            <Border Grid.Row="1" Height="1" Background="#3F3F46" Margin="0,0,0,8"/>
                            
                            <!-- Response Content -->
                            <ScrollViewer Grid.Row="2" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <TextBlock Text="{Binding Answer}" HorizontalAlignment="Left"
                                           Foreground="#E1E1E1" 
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           MaxWidth="376"/>
                            </ScrollViewer>
                            
                            <!-- Resize Corners (all 4 corners) -->
                            <Thumb Grid.Row="0" Grid.RowSpan="3"
                                   Width="16" Height="16"
                                   VerticalAlignment="Top" HorizontalAlignment="Left"
                                   Cursor="SizeNWSE" Opacity="0"
                                   Panel.ZIndex="1000"
                                   DragStarted="ResponseResize_DragStarted"
                                   DragCompleted="ResponseResize_DragCompleted"
                                   DragDelta="ResponseResizeTL_DragDelta"/>
                            <Thumb Grid.Row="0" Grid.RowSpan="3"
                                   Width="16" Height="16"
                                   VerticalAlignment="Top" HorizontalAlignment="Right"
                                   Cursor="SizeNESW" Opacity="0"
                                   Panel.ZIndex="1000"
                                   DragStarted="ResponseResize_DragStarted"
                                   DragCompleted="ResponseResize_DragCompleted"
                                   DragDelta="ResponseResizeTR_DragDelta"/>
                            <Thumb Grid.Row="0" Grid.RowSpan="3"
                                   Width="16" Height="16"
                                   VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                   Cursor="SizeNESW" Opacity="0"
                                   Panel.ZIndex="1000"
                                   DragStarted="ResponseResize_DragStarted"
                                   DragCompleted="ResponseResize_DragCompleted"
                                   DragDelta="ResponseResizeBL_DragDelta"/>
                            <Thumb Grid.Row="0" Grid.RowSpan="3"
                                   Width="16" Height="16"
                                   VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                   Cursor="SizeNWSE" Opacity="0"
                                   Panel.ZIndex="1000"
                                   DragStarted="ResponseResize_DragStarted"
                                   DragCompleted="ResponseResize_DragCompleted"
                                   DragDelta="ResponseResizeBR_DragDelta"/>
                        </Grid>
                    </Border>
                </Popup>
                
                <!-- Expand Button -->
                <Button Grid.Column="7" 
                        Style="{StaticResource ExpandButtonStyle}"
                        Click="ExpandButton_Click"
                        Width="32" Height="32"
                        Margin="0,0,4,0"
                        ToolTip="Ripristina finestra completa">
                    <TextBlock Text="â†—" FontSize="16" FontWeight="Bold"/>
                </Button>
            </Grid>
        </Border>
    </Border>
    </Grid>
</Window>

