<Window x:Class="RailStudio.Views.ModuleSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Modules for Manifest" 
        Height="500" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Select Modules to Include" 
                       FontSize="22" 
                       FontWeight="SemiBold"
                       Foreground="LightGray"/>
            <TextBlock Text="Choose which modules should be exposed to the LLM in the manifest" 
                       FontSize="12" 
                       Foreground="White"
                       Opacity="0.7"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Module List -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignDivider}"
                CornerRadius="8"
                Padding="0"
                Margin="0,0,0,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ModuleItemsControl" Margin="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4" Padding="12" CornerRadius="6"
                                    Background="{DynamicResource MaterialDesignCardBackground}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,12,0"/>
                                    
                                    <!-- Module Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ModuleName}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="White"/>
                                        <TextBlock Text="{Binding ModulePath}" 
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <!-- Tool Count Badge -->
                                    <Border Grid.Column="2" 
                                            Background="{DynamicResource PrimaryHueMidBrush}"
                                            CornerRadius="12"
                                            Padding="10,4"
                                            VerticalAlignment="Center">
                                        <TextBlock>
                                            <Run Text="{Binding ToolCount}"/>
                                            <Run Text="tools"/>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Summary -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignDivider}"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Information" 
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                         Margin="0,0,8,0"/>
                <TextBlock x:Name="SummaryText"
                           FontSize="13"
                           VerticalAlignment="Center"
                           Foreground="White"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Select All" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="SelectAll_Click"/>
            <Button Content="Cancel" 
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100"
                    Margin="0,0,8,0"/>
            <Button Content="Generate Manifest" 
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="160"
                    Click="Generate_Click"/>
        </StackPanel>
    </Grid>
</Window>

