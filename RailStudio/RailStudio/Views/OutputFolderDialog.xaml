<Window x:Class="RailStudio.Views.OutputFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Output Folder Name" 
        Height="260" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Choose Output Folder Name" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="LightGray"/>
            <TextBlock Text="The manifest will be saved in this folder" 
                       FontSize="12" 
                       Foreground="White"
                       Opacity="0.7"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Input -->
        <TextBox Grid.Row="1"
                 x:Name="FolderNameTextBox"
                 Foreground="White"
                 materialDesign:HintAssist.Hint="Folder name"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="14"
                 Margin="0,0,0,8"
                 KeyDown="FolderNameTextBox_KeyDown"/>
        
        <!-- Preview Path -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignDivider}"
                CornerRadius="4"
                Padding="12"
                Margin="0,8,0,0">
            <StackPanel>
                <TextBlock Text="Output Path:" 
                           FontSize="11" 
                           Opacity="0.6"
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="PreviewPathText"
                           Text="{Binding PreviewPath}"
                           FontSize="12"
                           Margin="0,4,0,0"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel" 
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100"
                    Margin="0,0,8,0"/>
            <Button Content="OK" 
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

